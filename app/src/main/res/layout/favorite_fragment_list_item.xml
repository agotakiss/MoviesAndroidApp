<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="4dp"
    android:elevation="16dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/favoritePoster"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/favoriteTitle"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="a legjobb film a vilÃ¡gon"
            app:layout_constraintStart_toEndOf="@id/favoritePoster" />

        <TextView
            android:id="@+id/addedOnTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/added_to_favorites_on"
            app:layout_constraintStart_toEndOf="@id/favoritePoster"
            app:layout_constraintTop_toBottomOf="@id/favoriteTitle" />

        <TextView
            android:id="@+id/addedOnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2012.04.23."
            app:layout_constraintBottom_toBottomOf="@id/addedOnTextView"
            app:layout_constraintStart_toEndOf="@id/addedOnTextView"
            app:layout_constraintTop_toTopOf="@id/addedOnTextView" />

        <ImageView
            android:id="@+id/favorite_imageview_favorite_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/favorite_full_pic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

